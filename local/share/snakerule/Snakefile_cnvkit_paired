include: "../conf.sk"

# not using an subworkflow here to reduce dependencies nightmares, this will be run after mutect2
rule batch:
    input: bamdelta=expand("../align_calibrate/realigned_{sample}.sorted.bam", sample=SAMPLESD), bed=SEXONS, reference=DATA_DIR+"/GRCh38.d1.vd1.fa", bamref="../align_calibrate/realigned_"+REF+".sorted.bam", refFlat=REFFLAT
    output: o1="cnv/reference.cnn", o2="cnv.plh"
    log: "cnv.log"
    singularity: ROOT+"/cnvkit/cnvkit.img"
    shell: 
        """
            cnvkit.py batch {input.bamdelta} --normal {input.bamref} \
            --targets {input.bed} --annotate {input.refFlat} \
            --fasta {input.reference} \
            --output-dir cnv/ \
            --diagram --scatter \
            2> {log}
            touch {output.o2}
        """

